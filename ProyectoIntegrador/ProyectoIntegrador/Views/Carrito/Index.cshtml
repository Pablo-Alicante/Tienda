@model ProyectoIntegrador.Models.Pedido

@{
    ViewData["Title"] = "Carrito";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Mi Carrito</h1>
@{ 
    if(Model == null)
    {
        <h4>No tienes ningún pedido creado</h4>
    }
    else 
    { 
    <div>
        <h4>Pedido</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fecha)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fecha)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fecha)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fecha)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Confirmado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Confirmado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Preparado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Preparado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Enviado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Enviado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cobrado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cobrado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Devuelto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Devuelto)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Anulado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Anulado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cliente.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estado.Descripcion)
            </dd>
        </dl>

        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Detalles)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Precio)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Stock)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Escaparate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Imagen)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Categoria)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Texto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Precio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Stock)
                            </td>
                            <td>
                                @{
                                    string Verdadero = "Visible";
                                    if (item.Escaparate == true)
                                    {
                                        Verdadero = "Visible";
                                    }
                                    else
                                    {
                                        Verdadero = "No visible";
                                    }
                                }
                                @Verdadero
                            </td>
                            <td>
                                @{
                                    string Imagen = "ImagenDefault.jpg";
                                    if (item.Imagen != null)
                                    {
                                        Imagen = item.Imagen;
                                    }
                                }
                                <img class="Imagen" src="~/img/@Imagen" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Categoria.Descripcion)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    }
}